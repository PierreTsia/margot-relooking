---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
import { Header } from '../components/Header';
import '../styles/globals.css';
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/netlify-identity-widget@1/build/netlify-identity-widget.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cabinet+Grotesk:wght@400;500;600;700&family=Gambetta:ital,wght@0,400;0,500;0,600;0,700;1,400&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-[hsl(40,33%,99%)] text-text-primary">
    <Header client:load />
    <slot />
    <script>
      // Debug Netlify Identity
      (window as any).netlifyIdentity.on('init', (user: any) => {
        console.log('Netlify Identity initialized:', user);
      });
      
      (window as any).netlifyIdentity.on('error', (err: any) => {
        console.error('Netlify Identity error:', err);
      });
      
      if (window.location.hash && window.location.hash.includes('invite_token')) {
        const token = window.location.hash.split('=')[1];
        console.log('Found invite token:', token);
        
        // Wait for netlifyIdentity to be available
        const checkIdentity = setInterval(() => {
          if ((window as any).netlifyIdentity) {
            clearInterval(checkIdentity);
            console.log('Netlify Identity loaded');
            
            (window as any).netlifyIdentity.open();
            (window as any).netlifyIdentity.on('init', (user: any) => {
              console.log('Init event, user:', user);
              if (!user) {
                (window as any).netlifyIdentity.on('login', () => {
                  console.log('Login successful, redirecting...');
                  document.location.href = '/admin/';
                });
              } else {
                console.log('User already logged in, redirecting...');
                document.location.href = '/admin/';
              }
            });
          }
        }, 100);
      }
    </script>
  </body>
</html> 