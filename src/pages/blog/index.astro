---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Badge } from '@/components/ui/badge';
import { LinkButton } from '@/components/ui/link-button';
import { ArrowRight } from 'lucide-react';
import { Card, CardHeader, CardTitle, CardDescription } from '@/components/ui/card';
import { BlogMeta } from '@/components/ui/blog-meta';

const posts = await getCollection(
  'blog', ({ data }: CollectionEntry<'blog'>) => {
    return import.meta.env.DEV || !data.draft;
  }
);

// Sort by date
const sortedPosts: CollectionEntry<'blog'>[] = posts.sort(
  (a: CollectionEntry<'blog'>, b: CollectionEntry<'blog'>) => b.data.date.valueOf() - a.data.date.valueOf()
);

// Split posts into featured and regular
const [firstPost, secondPost, ...regularPosts] = sortedPosts;
---

<BaseLayout title="Blog - Margot Relooking" description="DÃ©couvrez nos articles sur le conseil en image">
  <main class="mx-auto max-w-4xl px-4 py-12">
    <h1 class="mb-12 font-display text-4xl">Articles</h1>
    <div class="grid gap-8 md:grid-cols-2 mb-12">
      {[firstPost, secondPost].map((post) => (
        <article class="group">
          <a href={`/blog/${post.slug}`} class="block">
            {post.data.image && (
              <div class="mb-4 aspect-[16/9] overflow-hidden rounded-lg">
                <img
                  src={post.data.image}
                  alt=""
                  class="h-full w-full object-cover transition-all duration-300 group-hover:scale-105"
                />
              </div>
            )}
            <div class="space-y-3">
              <h2 class="font-display text-2xl transition-colors group-hover:text-primary">
                {post.data.title}
              </h2>
              <div class="flex flex-wrap gap-2">
                {post.data.tags?.map((tag) => (
                  <Badge variant="primary-light" className="text-xs">
                    {tag}
                  </Badge>
                ))}
              </div>
           
              {post.data.description && (
                <p class="text-muted-foreground line-clamp-2">
                  {post.data.description}
                </p>
              )}
                 <BlogMeta 
                   client:load 
                   author={post.data.author} 
                   date={post.data.date}
                   showStats={true}
                   content={post.body}
                 />
            </div>
          </a>
        </article>
      ))}
    </div>

    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {regularPosts.map((post) => (
        <article class="group">
          <a href={`/blog/${post.slug}`} class="block">
            {post.data.image && (
              <div class="mb-4 aspect-[16/9] overflow-hidden rounded-lg">
                <img
                  src={post.data.image}
                  alt=""
                  class="h-full w-full object-cover transition-all duration-300 group-hover:scale-105"
                />
              </div>
            )}
            <div class="space-y-3">
              <div class="flex flex-wrap gap-1.5">
                {post.data.tags?.map((tag) => (
                  <Badge variant="primary-light" className="text-xs font-medium">
                    {tag}
                  </Badge>
                ))}
              </div>
              <h2 class="font-display text-2xl transition-colors group-hover:text-primary">
                {post.data.title}
              </h2>
              {post.data.description && (
                <p class="text-muted-foreground/80 text-sm leading-relaxed line-clamp-2">
                  {post.data.description}
                </p>
              )}
              <div class="pt-2 mt-auto">
                <BlogMeta 
                  client:load 
                  author={post.data.author} 
                  date={post.data.date}
                  showStats={false}
                />
              </div>
            </div>
          </a>
        </article>
      ))}
    </div>
  </main>
</BaseLayout>

