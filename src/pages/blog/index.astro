---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const posts = await getCollection('blog', ({ data }) => {
  return import.meta.env.DEV || !data.draft;
});

// Sort by date
const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Blog - Margot Relooking">
  <main class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="font-display text-4xl mb-8">Articles</h1>
    <div class="grid gap-8">
      {sortedPosts.map((post) => (
        <article class="border rounded-lg p-6">
          <h2 class="font-display text-2xl">
            <a href={`/blog/${post.slug}`} class="hover:text-primary">
              {post.data.title}
            </a>
          </h2>
          {post.data.description && (
            <p class="mt-2 text-text-secondary">{post.data.description}</p>
          )}
          <time class="text-sm text-text-muted">
            {post.data.date.toLocaleDateString('fr-FR')}
          </time>
        </article>
      ))}
    </div>
  </main>
</BaseLayout> 