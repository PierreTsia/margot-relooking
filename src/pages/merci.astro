---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Button } from '@/components/ui/button';
import { ArrowLeft } from 'lucide-react';
---

<BaseLayout 
  title="Message envoyé - Margot Relooking" 
  description="Votre message a bien été envoyé"
>
  <main class="mx-auto max-w-2xl px-4 py-24 text-center">
    <h1 class="text-3xl font-display mb-4">Message envoyé !</h1>
    <p class="text-muted-foreground mb-8">Je vous répondrai dans les plus brefs délais.</p>
    
    <Button asChild variant="outline">
      <a href="/" class="inline-flex items-center gap-2">
        <ArrowLeft className="h-4 w-4" />
        Retour à l'accueil
      </a>
    </Button>
  </main>
</BaseLayout> 