---
interface Props {
  title: string;
  description?: string;
  date: Date;
  url: string;
  image?: string;
}

const { title, description, date, url, image } = Astro.props;
---

<article
  class="group overflow-hidden rounded-lg bg-white shadow-sm transition hover:shadow-md"
>
  {
    image && (
      <div class="aspect-video overflow-hidden">
        <img
          src={image}
          alt=""
          class="h-full w-full object-cover transition duration-300 group-hover:scale-105"
        />
      </div>
    )
  }
  <div class="p-6">
    <time class="text-text-secondary text-sm" datetime={date.toISOString()}>
      {
        new Date(date).toLocaleDateString('fr-FR', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        })
      }
    </time>
    <h2
      class="text-primary-dark mb-3 mt-2 font-display text-2xl group-hover:text-primary"
    >
      <a href={url} class="block">
        {title}
      </a>
    </h2>
    {
      description && (
        <p class="text-text-secondary line-clamp-3">{description}</p>
      )
    }
  </div>
</article>

