---
interface Props {
  title: string;
  description?: string;
  date: Date;
  url: string;
  image?: string;
}

const { title, description, date, url, image } = Astro.props;
---

<article class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition group">
  {image && (
    <div class="aspect-video overflow-hidden">
      <img 
        src={image} 
        alt=""
        class="w-full h-full object-cover group-hover:scale-105 transition duration-300"
      />
    </div>
  )}
  <div class="p-6">
    <time class="text-text-secondary text-sm" datetime={date.toISOString()}>
      {new Date(date).toLocaleDateString('fr-FR', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}
    </time>
    <h2 class="font-display text-2xl text-primary-dark mt-2 mb-3 group-hover:text-primary">
      <a href={url} class="block">
        {title}
      </a>
    </h2>
    {description && (
      <p class="text-text-secondary line-clamp-3">
        {description}
      </p>
    )}
  </div>
</article> 