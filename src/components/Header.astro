---
const navItems = [
  { href: '/blog', label: 'Articles' },
  { href: '/a-propos', label: 'Ã€ propos' },
];

// Get current path to highlight active nav item
const currentPath = Astro.url.pathname;
---

<header
  class="sticky top-0 z-50 border-b border-primary/10 bg-[hsl(40,33%,99%)] bg-opacity-90 backdrop-blur-sm"
>
  <nav class="mx-auto max-w-4xl px-4 py-4">
    <div class="flex items-center justify-between">
      <a
        href="/"
        class="text-primary-dark font-display text-xl transition-colors hover:text-primary"
      >
        Margot Relooking
      </a>

      <ul class="flex space-x-6">
        {
          navItems.map(({ href, label }) => (
            <li>
              <a
                href={href}
                class:list={[
                  'text-text-secondary transition-colors hover:text-primary',
                  { 'font-medium text-primary': currentPath.startsWith(href) },
                ]}
              >
                {label}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </nav>
</header>

