---
import { Image } from 'astro:assets';
import { cn } from '@/lib/utils';

interface Props {
  src?: string;
  alt: string;
  className?: string;
}

const { src, alt, className } = Astro.props;
const defaultImage = '/images/static/blog-placeholder.jpg';

// Define standard image dimensions for consistency
const imageSize = {
  width: 1200,
  height: 675,
};

// Handle the image source
const imageSrc = src || defaultImage;
---

<div class={cn('aspect-[16/9] overflow-hidden rounded-t-lg', className)}>
  <Image
    src={imageSrc}
    alt={alt}
    width={imageSize.width}
    height={imageSize.height}
    class="h-full w-full object-cover transition-all hover:scale-105 duration-300 bg-muted/10"
    loading="lazy"
    format="webp"
  />
</div>